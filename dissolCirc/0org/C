FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      C;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 1.0;
    }
    outlet
    {
        type            zeroGradient;
    }


    insolubleWall
    {
        type            zeroGradient;
    }

    top
    {
        type            empty;
    }
    bottom
    {
        type            empty;
    }

    solubleWall
    {
        type            codedMixed;
        value           uniform 0.0;

        refValue        uniform 0;
        refGradient     uniform 0;
        valueFraction   uniform 1;

        name    codedNonLinear;   // name of generated BC

        codeOptions     "-I/home/tladd/OpenFOAM/tladd-4.x/applications/libsFoamAux/boundaryConditions";

        code
        #{
            #include "nonLinear.H"
        #};

        codeInclude
        #{
            #include "addToRunTimeSelectionTable.H"
            #include "plane.H"
        #};
    }
}

