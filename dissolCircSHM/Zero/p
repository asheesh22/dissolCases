FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    inlet
    {
        type            fixedValue;         // Pressure drop (12*nu*L/h^2)
        value           uniform 100000.0;   // Any value OK for constant Q
    }
    outlet
    {
        type            fixedValue;
        value           uniform 0.0;
    }

    insolubleWall
    {
        type            zeroGradient;
    }

    top
    {
        type            empty;
    }
    bottom
    {
        type            empty;
    }

    solubleWall
    {
        type            zeroGradient;
    }
}

