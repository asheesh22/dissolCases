FoamFile
{
    version     4.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fieldMap2Ddict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

patchName               solubleWall;

// geometry options: flat, concentricCylinders
geometry								flat; 

// box
// if one wall is fixed minPoint should represent it like in this example
// minPoint.y() is less then maxPoint.y() because the fixed wall belongs to XZ plane at Y=0.5
minPoint         (  0  -1  -5); 
maxPoint         (400   1   0);

flowDirection                     0;  // 0 - X, 1 - Y, 2 - Z
integrationDirection              2;  // 0 - X, 1 - Y, 2 - Z

// intersections  options: 1 or 2
expectedNumberOfIntersections     1;

numberOfIntegrationPoints        15;

