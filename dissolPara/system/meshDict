FoamFile
{
version	2;
format	ascii;
class	dictionary;
location	"system";
object	meshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

surfaceFile	"constant/triSurface/geom.stl";

maxCellSize	0.1;

boundaryLayers
{
    patchBoundaryLayers
    {
        solubleWall
        {
            nLayers         2;
            thicknessRatio  1;
        }
    }
    optimizeLayer 1;
    optimizationParameters
    {
        relThicknessTol 0.1;
    }
}

renameBoundary
{
    newPatchNames
    {
        "inlet"
        {
            newName inlet;
            type patch;
        }
        "outlet"
        {
            newName outlet;
            type patch;
        }
        "insolubleWall"
        {
            newName insolubleWall;
            type patch;
        }
        "topEmptyFaces"
        {
            newName top;
            type empty;
        }
        "bottomEmptyFaces"
        {
            newName bottom;
            type empty;
        }
        "solubleWall"
        {
            newName solubleWall;
            type patch;
        }
    }
}


